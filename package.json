{
  "name": "offisho-transport",
  "version": "1.0.0",
  "description": "Offisho Transport - Full Stack Application",
  "scripts": {
    "build": "cd backend && npm install && npm run build && cd ../frontend && npm install && npm run build",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "vercel-build": "cd backend && npm install && cd ../frontend && npm install && npm run build"
  },
  "devDependencies": {
    "@vercel/node": "^5.5.24",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@convex-dev/auth": "0.0.94",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^7.0.9",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.9.0",
    "convex": "^1.31.7",
    "nodemailer": "^6.10.1"
  }
}