{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "backend/src/*", "api/*"]
    }
  },
  "include": [
    "backend/src/**/*.ts",
    "api/**/*.ts",
    "api/**/*.d.ts",
    "*.ts",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "frontend",
    "**/__tests__/**",
    "**/*.test.ts"
  ]
}
